= form_for @mp3tune do |f|
  -if @mp3tune.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mp3tune.errors.count, "error")} prohibited this mp3tune from being saved:"
      %ul
        - @mp3tune.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :artist
    = f.text_field :artist
  .field
    = f.label :length
    = f.text_field :length
  .actions
    = f.submit 'Save'
